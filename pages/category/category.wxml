<!-- pages/category/category.wxml -->
<view class="category">
    <SearchInput></SearchInput>
    <view class="category-container">
        <!-- 左侧菜单 -->
        <scroll-view class="left_menu" scroll-y="true">
            <view class="menu-item {{index===currentIndex ? 'active' : ''}}" wx:for="{{leftMenuList}}" wx:key="*this" bindtap="handleItemTap" data-index="{{index}}">
                {{item}}
            </view>
        </scroll-view>
        <!-- 右侧内容 -->
        <scroll-view class="right_content" scroll-y scroll-top="{{scrollTop}}">
            <view class="goods_group" wx:for="{{rightContentList}}" wx:for-item="item1" wx:for-index="index1" wx:key="cat_id">
                <view class="goods_title">
                    <view class="delimiter">/</view>
                    <view class="title">{{ item1.cat_name }}</view>
                    <view class="delimiter">/</view>
                </view>
                <view class="goods_list">
                    <navigator url="/pages/goods_list/goods_list?cid={{ item2.cat_id }}" wx:for="{{item1.children}}" wx:for-item="item2" wx:for-index="index2" wx:key="cat_id">
                        <image mode="widthFix" src="{{item2.cat_icon}}" />
                        <view class="goods_name">{{ item2.cat_name }}</view>
                    </navigator>
                </view>
            </view>
        </scroll-view>
    </view>
</view>